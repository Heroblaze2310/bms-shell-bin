[Unit]
Description=BakraDE Material Shell (BMS)
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
Type=dbus
BusName=org.freedesktop.Notifications
ExecStart=/usr/bin/bms run --session
ExecReload=/usr/bin/pkill -USR1 -x bms
Restart=on-failure
RestartSec=1.23
TimeoutStopSec=10

[Install]
WantedBy=graphical-session.target
